.cartcontrol
    font-size: 0
    .cart-decrease, .cart-add
        display: inline-block
        padding: 6px
        font-size: 24px
        line-height: 24px
        color: rgb(0, 160, 220)
    .cart-count
        display: inline-block
        vertical-align: top
        width: 12px
        padding-top: 6px
        box-sizing: border-box
        text-align: center
        font-size: 10px
        line-height: 24px
        color: rgb(147, 153, 159)
